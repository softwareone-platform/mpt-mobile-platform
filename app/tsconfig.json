{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@featureFlags": ["src/config/feature-flags/featureFlags.ts"]
    },
    "types": ["jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
